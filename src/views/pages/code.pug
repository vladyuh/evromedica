extends ../layouts/default
include ../helpers/mixins
include ../../blocks/components/breadcrumbs/breadcrumbs.pug
include ../../blocks/components/form/form.pug
include ../../blocks/components/checkbox/checkbox.pug
include ../../blocks/components/headers/headers.pug
include ../../blocks/components/table/table.pug
include ../../blocks/components/popup/popup.pug


block variables
    - const title = "Главная"

block styles
    link(rel="stylesheet" href="/styles/login.css")
block content
    .login-block
        .container
            .login-block__logo
                img(src="/img/common/logo.svg" width=188 height=68)
            .login-block__desc
                .title Код доступа
                .text На номер
                    span.number +375 (29) 444-**-**
                    | было отправлено СМС с кодом доступа
            form.login-block__form(action="register.html")
                .form__field.pincode
                    input(type="number")
                    input(type="number")
                    input(type="number")
                    input(type="number")
                    input(type="hidden" name="pincode")
                .form__submit
                    button.btn.btn-transparent(type=submit) Получить код по СМС
            .login-block__back
                a(href="login.html")
                    +icons('#icon_chevron_left', 24)
                    span Изменить телефон
    +callbackPopup()
block scripts
    script(src="js/main.js")