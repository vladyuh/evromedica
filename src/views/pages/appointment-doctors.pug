extends ../layouts/default
include ../helpers/mixins
include ../../blocks/components/breadcrumbs/breadcrumbs.pug
include ../../blocks/components/form/form.pug
include ../../blocks/components/checkbox/checkbox.pug
include ../../blocks/components/headers/headers.pug
include ../../blocks/components/table/table.pug
include ../../blocks/components/popup/popup.pug
include ../../blocks/modules/user-block/user-block.pug
include ../../blocks/modules/searchbox/searchbox.pug
include ../../blocks/modules/services-section/services-section.pug
include ../../blocks/modules/analyzes/analyzes-mixin.pug
include ../../blocks/modules/top-bar/top-bar.pug


block variables
    - const title = "Главная"
block styles
    link(rel="stylesheet" href="/styles/appoint.css")
block content
    .appoint-page
        .top-bar
            .container
                a(href="#choose").top-bar__back
                    svg(width='28' height='28')
                        use(xlink:href='/img/sprites/sprite.svg#icon_chevron_left_small_border')
                .top-bar__title Врач
                a(href="#choose").top-bar__close
                    svg(width='28' height='28')
                        use(xlink:href='/img/sprites/sprite.svg#icon_x_small_border')
        .appointment-block
            .container
                .appointment-block__doctors.doctors-block__items
                    .doctors-block__item
                        label.text
                            .text-name Басенко Татьяна Валерьевна
                            .text-caption Врач акушер-гинеколог
                            input(type="radio" name="doctor" value="Басенко Татьяна Валерьевна")
                        .image
                            img(loading="lazy" class="lazyload" data-src="/img/common/doc-8.jpg" width="80" height="104")
                    .doctors-block__item
                        label.text
                            .text-name Ломаченко Мария Викторовна
                            .text-caption Врач акушер-гинеколог
                            input(type="radio" name="doctor" value="Ломаченко Мария Викторовна")
                        .image
                            img(loading="lazy" class="lazyload" data-src="/img/common/doc-9.jpg" width="80" height="104")
                    .doctors-block__item
                        label.text
                            .text-name Ивашкевич Надежда Владимировна
                            .text-caption Врач акушер-гинеколог
                            input(type="radio" name="doctor" value="Ивашкевич Надежда Владимировна")
                        .image
                            img(loading="lazy" class="lazyload" data-src="/img/common/doc-10.jpg" width="80" height="104")
    +callbackPopup()
block scripts
    script(src="js/data.js")
    script(src="js/main.js")
